{
  "name": "image-shrink",
  "productName": "ImageShrink",
  "version": "1.0.0",
  "description": "App to optimize images",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=arm64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=false --out=release-builds",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=false --out=release-builds"
  },
  "author": "Blessed",
  "license": "ISC",
  "devDependencies": {
    "@electron/packager": "^18.3.0",
    "electron": "^39.0.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "electron-log": "^4.1.2",
    "imagemin": "^7.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^9.0.2",
    "nodemon": "^3.1.10",
    "slash": "^3.0.0"
  }
}
